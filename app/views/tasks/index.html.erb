 <div class="wrapper wrapper-content white-bg  animated fadeInRight">
   <div class="row">
    <div class="col-lg-12">
         <div class="ibox">
            <div class="ibox-title">
                <h2>My Tasks</h2>
            </div>
             <% unless  notice.blank? %>
            <div class="alert alert-success">
                <p id="notice"><%= notice %></p>
            </div>
            <% end %>
            <div class="ibox-content">
              <table class="table">
                <thead>
                  <tr>
                    <th>Title</th>
                    <th>Priority</th>
                    <th>Status</th>
                    <th>Board</th>
                    <th>User Name</th>
                     <th>Create At</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>
              
                <tbody>
                  <% @tasks.each do |task| %>
                    <tr>
                      <td><%= task.title %></td>
                      <td><%= task.priority %></td>
                      <td><%= task.status %></td>
                      <td><%= task.board.title %></td>
                      <td><%= task.user.name %></td>
                      <th><%= task.created_at.strftime("%F") + %{ - } + task.created_at.strftime("%T")  %></th>
                      <td><%= link_to 'Show', task, class: "btn btn-w-m btn-success" %></td>
                      <td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-w-m btn-warning" %></td>
                      <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-w-m btn-danger" %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
              </br>
              <%= link_to 'New Task', new_task_path, class: "btn btn-primary" %>
             <div class="center">
               <%= will_paginate @tasks, renderer: BootstrapPagination::Rails %>
               </div>
            </div>
             
          </div>
        </div>
      </div>
</div>
