 <div class="wrapper wrapper-content white-bg  animated fadeInRight">
   <div class="row">
    <div class="col-lg-12">
         <div class="ibox">
            <div class="ibox-title">
                <h2>My Boards</h2>
            </div>
            <div class="ibox-content">
                <table class="table">
                    <thead>
                      <tr>
                        <th>Title</th>
                        <th>Public</th>
                        <th>User</th>
                        <th colspan="3"></th>
                      </tr>
                    </thead>
                  
                    <tbody>
                      <% @boards.each do |board| %>
                        <tr>
                          <td><%= board.title %></td>
                          <td><%= board.public %></td>
                          <th><%= board.user.name %></th>
                          <td><%= link_to 'Show', board %></td>
                          <td><%= link_to 'Edit', edit_board_path(board) %></td>
                          <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                  </br>
                    <%= link_to 'New Board', new_board_path, class: "btn btn-primary" %>
                </div>
                   
            </div>
        </div>
    </div>
</div>







<p id="notice"><%= notice %></p>



