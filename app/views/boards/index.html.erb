 <div class="wrapper wrapper-content white-bg  animated fadeInRight">
   <div class="row">
    <div class="col-lg-12">
         <div class="ibox">
            <div class="ibox-title">
                <h2>My Boards</h2>
            </div>
            <% unless notice.blank? %>
                <div class="alert alert-success">
                    <p id="notice"><%= notice %></p>
                </div>
            <% end %>
            <div class="ibox-content">
                <table class="table">
                    <thead>
                      <tr>
                        <th>Title</th>
                        <th>Public</th>
                        <th>User</th>
                        <th>Create At</th>
                        <th colspan="3"></th>
                      </tr>
                    </thead>
                  
                    <tbody>
                      <% @boards.each do |board| %>
                        <tr>
                          <td><%= board.title %></td>
                          <td><%= board.public %></td>
                          <th><%= board.user.name %></th>
                          <th><%= board.created_at.strftime("%F") + %{ - } + board.created_at.strftime("%T")  %></th>
                          <td><%= link_to 'Show', board, class: "btn btn-w-m btn-success" %></td>
                          <td><%= link_to 'Edit', edit_board_path(board), class: "btn btn-w-m btn-warning" %></td>
                          <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-w-m btn-danger" %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                  </br>
                    <%= link_to 'New Board', new_board_path, class: "btn btn-primary" %>
                    <div class="center">
                       <%= will_paginate @boards, renderer: BootstrapPagination::Rails %>
                     </div>
                </div>
            </div>
        </div>
    </div>
</div>











